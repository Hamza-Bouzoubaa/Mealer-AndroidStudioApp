<resources>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="PhotoCard.Label" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CallToAction">
        <item name="android:backgroundTint">@color/callToAction</item>
        <item name="android:buttonTint">@color/callToAction</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CallToActionDarkText" parent="CallToAction">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="Disabled">
        <item name="android:backgroundTint">@color/disabled</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="UserSelectImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BottomMenuBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    </style>
</resources>