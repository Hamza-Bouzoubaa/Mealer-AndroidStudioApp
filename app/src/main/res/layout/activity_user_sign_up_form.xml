<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.UserSignUpFormActivity">

    <TextView
        android:id="@+id/user_sign_up_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/user_sign_up_form_title"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/user_sign_up_form_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/form_first_name"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_title" />

    <EditText
        android:id="@+id/user_sign_up_form_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/form_last_name"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_first_name"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_first_name"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_first_name" />

    <EditText
        android:id="@+id/user_sign_up_form_email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/form_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_last_name"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_last_name"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_last_name" />

    <EditText
        android:id="@+id/user_sign_up_form_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/form_password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_email"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_email"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_email" />


    <EditText
        android:id="@+id/user_sign_up_form_description"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/form_description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_password"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_password"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_password" />


    <EditText
        android:id="@+id/user_sign_up_form_credit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/form_credit_card"
        android:inputType="phone"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_description"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_description"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_description" />

    <EditText
        android:id="@+id/user_sign_up_form_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/form_address"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/user_sign_up_form_credit_card"
        app:layout_constraintStart_toStartOf="@id/user_sign_up_form_credit_card"
        app:layout_constraintTop_toBottomOf="@id/user_sign_up_form_credit_card" />

    <CheckBox
        android:id="@+id/user_sign_up_form_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/form_conditions"
        style="@style/CallToActionDarkText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_sign_up_form_submit_button" />

    <Button
        android:id="@+id/user_sign_up_form_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/action_submit"
        style="@style/CallToAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>