<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recommendation_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Recommendation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_view"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recommendation_stars"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/recommendation_item_title"
        app:layout_constraintEnd_toEndOf="@id/recommendation_item_title"
        app:layout_constraintTop_toBottomOf="@id/recommendation_item_title">
        <ImageView
            android:id="@+id/recommendation_1_star"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:tint="@color/primary"
            android:contentDescription="@string/star_rating_1" />
        <ImageView
            android:id="@+id/recommendation_2_star"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:tint="@color/primary"
            android:contentDescription="@string/star_rating_2" />
        <ImageView
            android:id="@+id/recommendation_3_star"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:tint="@color/primary"
            android:contentDescription="@string/star_rating_3" />
        <ImageView
            android:id="@+id/recommendation_4_star"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:tint="@color/primary"
            android:contentDescription="@string/star_rating_4" />
        <ImageView
            android:id="@+id/recommendation_5_star"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:tint="@color/primary"
            android:contentDescription="@string/star_rating_5" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>